<% @page_title = "Pages List"%>
<div class="list">
	
	<h2>Pages</h2>
	<%= link_to("Add Page", {action: 'new'}, class: 'action new') %>
	<div><%= pluralize(@pages.size, 'page')%> found</div>
	
	<table class="listing">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Page</th>
			<th>Visible</th>
			<th>Sections</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr class="<%= cycle('odd', 'even')%> ">
			<td><%= page.position %></td>
			<td><%= page.name %></td>
			<td class="center"><%= status_tag(page.visible) %></td>
			<td class="center"><%= page.sections.size %></td>
			<td class="actions">
				<%= link_to("show", {action: 'show', id: page.id}, class: 'action show') %>
				<%= link_to("edit", {action: 'edit', id: page.id}, class: 'action edit') %>
				<%= link_to("delete", {action: 'delete', id: page.id}, class: 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
			
			
		