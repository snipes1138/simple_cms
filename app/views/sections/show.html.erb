<%= link_to(" << Back to List", {action: 'list'}, class: 'back-link')%>

<div class="show">
	<h2>Show Section</h2>
	
	<table class="section detail view">
		<tr>
			<th>Name</th>
			<td><%= @section.name %></th>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @section.position %></th>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= @section.visible ? 'Yes' : 'No' %></th>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @section.created_at %></th>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @section.updated_at %></th>
		</tr>
		
	</table>
</div>
			